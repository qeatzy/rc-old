meta_s() {
if [ -n "$ZSH_VERSION" ]; then
    eval ' s() { source "${(%):-%x}"; }'
elif [ -n "$BASH_VERSION" ]; then
    eval 'CALLER="${BASH_SOURCE[1]}"; s() { source "$CALLER"; }'
fi
}

export h1='qeatzy@39.98.211.228'    # macheng 2019.08
h0=root@155.138.233.254
proxy () {
    case $1 in
        -k)
            unset http_proxy
            unset https_proxy
            echo "HTTP Proxy off"
            ;; -[nh])
            [ $http_proxy ] && echo "HTTP Proxy on" || echo "HTTP Proxy off";
            ;; -[q])
            [ $http_proxy ] && echo "$http_proxy $https_proxy" || echo "HTTP Proxy off";
            ;; *)
            export http_proxy="http://127.0.0.1:1082"
            export https_proxy="http://127.0.0.1:1082"
            echo "HTTP Proxy on"
    esac
}
alias to=proxy

# task/bash/s0.sh
ms() {
    num="$1";
    _h0="$2"
    echo $num $_h0
    if num=$((num+0)) && [ -n "$_h0" ]; then
        case "$_h0" in *@*) ;; *) _h0="root@$_h0";; esac
        echo "h$num=$_h0 ip$num='${_h0#*@}' u0='${_h0%%@*}'";
        shift 2;
        # echo $# args
        # set -x
        if [ $# -eq 0 ]; then
            ssh "$_h0";
        elif [ $# -eq 1 ] && [ "$1" = a ]; then
            ssh "$_h0" -t "tmux a || tmux";
        else
            ssh "$_h0" -t "$@";
        fi
    else
        return 23
    fi
    return $?
}
for i in {0..5}; do
    if eval "[ \$h$i ]"; then
        eval "s$i() { ms $i \$h$i \"\$@\"; }"
        eval "_h0=\$h$i"
        case "$_h0" in *@*) ;; *) _h0="root@$_h0";; esac
        eval "export h$i=$_h0 ip$i=${_h0#*@} u0=${_h0%%@*}";
        # echo has h$i;
    fi
done


